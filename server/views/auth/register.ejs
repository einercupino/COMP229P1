<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>

<style>
    body {
      background-color: #343a40;
    }
</style>

    <!-- Message Area-->
    <div class="flash-messages">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(function(message) { %>
            <div class="flash-message"><%= message %></div>
          <% }); %>
        <% } %>
      </div>

    <br><br><br><br><br><br><br><br><br><br><br><br><br>
    <main class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Register User</h1><br>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username"></label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Username"
                    id="username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password"> </label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Password"
                    id="password" required>
                </fieldset>

                <fieldset class="form-group">
                    <label for="email"></label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Email address"
                    id="email" required>
                </fieldset>

                <fieldset class="form-group">
                    <label for="displayName"></label>
                    <input type="text" class="form-control"
                    name="displayName" placeholder="Display name"
                    id="displayName" required>
                    <br>
                </fieldset>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-secondary" value="Register" style="width: 100%; height: 50px;"> <br><br>
                    <a href="/">
                        <input type="button" class="btn btn-light" value="Cancel" style="width: 100%">
                    </a>
                </fieldset>

            </form>
        </div>
    </div>

</main>

<%- include ('../partials/bottom_nav.ejs') %>

<%- include ('../partials/footer.ejs') %>